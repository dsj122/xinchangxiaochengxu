/* pages/evaluate/evaluate.wxss */

page {
  background-color: #f5f5f5;
}

.list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.item {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.title {
  margin: 30rpx;
  font-size: 25rpx;
  color: #666;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.desc {
  width: 690rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 29rpx;
}

.desc_left {
  display: flex;
  flex-direction: column;
}

.twenty_bottom {
  margin-bottom: 20rpx;
}

.btn {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn image {
  width: 120rpx;
  height: 46rpx;
}

.btn text {
  position: absolute;
  font-size: 23rpx;
  font-weight: bold;
}

.none_dispaly {
  position: absolute;
  top: 400rpx;
}

.none {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 29rpx;
  letter-spacing: 5rpx;
  line-height: 45rpx;
}

.none image {
  width: 277rpx;
  height: 182rpx;
  margin-bottom: 52rpx;
}

.tel_color {
  color: #af0e0e;
  font-weight: bold;
}

