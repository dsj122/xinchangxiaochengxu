/* pages/myEquip/myEquip.wxss */

page {
  background-color: #f5f5f5;
}

.download {
  padding: 20rpx 0;
  background-color: #fffcf1;
  width: 100%;
  text-align: center;
}

.und {
  text-decoration-line: underline;
  color: #af0e0e;
}

.qrcode {
  padding: 50rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 120;
  position: absolute;
  top: 260rpx;
}

.qrcode image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.item {
  margin-bottom: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  width: 690rpx;
  background-color: white;
}

.item_tile {
  display: flex;
  align-items: center;
  margin-left: -10rpx;
  margin-top: 32rpx;
  margin-bottom: 46rpx;
}

.item_tile image {
  width: 150rpx;
  height: 42rpx;
}

.item_tile text {
  position: absolute;
  margin-left: 24rpx;
}

.item_desc {
  width: 630rpx;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}

.item_detail {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto;
}

.item_detail_column {
  display: flex;
  flex-direction: column;
  font-size: 27rpx;
}

.item_pos {
  margin-top: 32rpx;
  color: #666;
  display: flex;
  flex-direction: row;
}

.item_pos image {
  width: 20rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

.item_pos text {
  max-width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.line {
  width: 630rpx;
  height: 2rpx;
  background-color: #eee;
  margin: 40rpx auto;
}

.item_model {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.item_model_left {
  display: flex;
  flex-direction: column;
  font-size: 27rpx;
}

.item_model_right {
  padding: 8rpx 10rpx;
  border: 2rpx solid #ccc;
  font-size: 21rpx;
  font-weight: bold;
  border-radius: 5rpx;
  color: #999;
  z-index: 10;
}

.twenty_bottom {
  margin-bottom: 20rpx;
}
