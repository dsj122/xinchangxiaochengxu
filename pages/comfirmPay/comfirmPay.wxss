/* pages/comfirmPay/comfirmPay.wxss */

.poup {
  z-index: 300;
  position: absolute;
  top: 450rpx;
  left: 135rpx;
  justify-content: center;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 480rpx;
}

.nameInput {
  margin-top: 60rpx;
  margin-bottom: 30rpx;
  width: 360rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #eee;
}

.tips {
  width: 340rpx;
  text-align: center;
  margin-bottom: 25rpx;
  color: #666;
}

.s_btnArr {
  width: 480rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid #eee;
}

.s_btn {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 107rpx;
}

.border_left {
  border-left: 1px solid #eee;
}

.money {
  width: 690rpx;
  margin: 20rpx auto 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.info {
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 0;
}

.detail {
  margin: 0 auto;
  width: 630rpx;
  max-width: 630rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.detail_item {
  padding: 10rpx 0rpx;
}

.line {
  width: 100%;
  background-color: #eee;
  height: 1px;
}

.btnArr {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 594rpx;
  position: absolute;
  bottom: 60rpx;
}

.btn {
  width: 280rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.close_btn {
  border: 1px solid #999;
  color: #999;
  background-color: white;
}

.pay_btn {
  width: 284rpx;
  height: 84rpx;
  background-color: #333;
  color: white;
}

.back_btn {
  width: 284rpx;
  height: 84rpx;
  background-color: #ffcd11;
}

.icon {
  margin: 170rpx auto 50rpx;
  width: 200rpx;
  height: 200rpx;
}

.result_text {
  margin: 0 auto 100rpx;
}

.center {
  text-align: center;
}

.pos_zero {
  position: relative;
  bottom: 0;
}
