/* pages/guarantee/guarantee.wxss */

page {
  background-color: #f5f5f5;
}

.red {
  color: #f11;
}

.gray {
  color: #999;
}

.padding_bottom {
  padding-bottom: 0rpx !important;
}

.margin_top_thirteen {
  margin-top: 30rpx;
}

.margin_right_none {
  margin-right: 0rpx !important;
}

.pick_text {
  font-size: 29rpx;
  width: 100%;
}

.list {
  display: flex;
  background-color: white;
  flex-direction: column;
  width: 100%;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.item {
  display: flex;
  width: 690rpx;
  position: relative;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #eee;
  align-items: center;
  z-index:1;
}

.item input {
  width: 100%;
}

.item_left {
  min-width: 170rpx;
  margin-right: 16rpx;
  white-space: nowrap;
}

.item_textarea {
  font-size: 29rpx;
  width: 65% !important;
}

.item_right {
  position: absolute;
  right: 0;
  margin-right: 10rpx;
}

.item_work {
  margin-left: 70rpx;
  width: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item_work image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.icon_arrow {
  width: 16rpx;
  height: 26rpx;
}

.icon_input {
  width: 26rpx;
  height: 26rpx;
}

input {
  font-size: 29rpx;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.desc {
  margin-top: 20rpx;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.border_none {
  border: none;
}

.desc_input {
  padding: 20rpx;
  width: 650rpx;
  max-width: 650rpx;
  height: 180rpx;
  background-color: white;
  border: 2rpx solid #ddd;
  margin: 0 auto;
  font-size: 25rpx;
  z-index: 0;
}

.img_arr {
  width: 690rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.img_item {
  margin-top: 30rpx;
  max-height: 200rpx;
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 30rpx;
}

.abs {
  position: absolute !important;
  top: -20rpx;
}

.img_item_main {
  width: 100%;
  height: 100%;
}

.img_item_close {
  z-index: 100;
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

.img_none {
  margin-top: 30rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img_none image {
  width: 72rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.img_none text {
  font-size: 23rpx;
  color: #ccc;
}

.video_display {
  margin-top: 30rpx;
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.btn_sub {
  width: 620rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: black;
  color: white;
  font-size: 31rpx;
  font-weight: bold;
  margin-top: 80rpx;
  margin-bottom: 90rpx;
}
