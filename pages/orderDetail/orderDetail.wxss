/* pages/orderDetail/orderDetail.wxss */

.icon {
  position: absolute;
  right: 60rpx;
  top: 80rpx;
  width: 116rpx;
  height: 116rpx;
}

.info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 20rpx solid #f5f5f5;
  border-bottom: 20rpx solid #f5f5f5;
  background-color: white;
}

.row {
  letter-spacing: 2rpx;
  width: 690rpx;
  padding: 30rpx 0;
  max-width: 690rpx;
  border-bottom: 1px solid #eee;
}

.no_bottom {
  border: none;
}

.detail {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 80rpx;
}

.title {
  margin: 0 auto;
  margin-top: 40rpx;
  width: 690rpx;
  display: flex;
  align-items: center;
}

.desc {
  margin: 0 auto;
  margin-top: 30rpx;
  width: 690rpx;
  max-height: 690rpx;
}

.imgArr {
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  width: 720rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
  padding: 10rpx 0;
}
