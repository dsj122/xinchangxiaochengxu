/* pages/question/question.wxss */

.red {
  color: #f11;
}

.yellow {
  background-color: #ffcd11 !important;
}

.topImage {
  width: 100%;
}
.desc {
  width: 690rpx;
  margin: 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  font-size: 27rpx;
}

.desc_title {
  display: flex;
  justify-content: start;
  font-size: 29rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.twenty_bottom {
  margin-bottom: 20rpx;
}

.line {
  margin-top: 30rpx;
  width: 630rpx;
  height: 2rpx;
  background-color: #eee;
}

.info {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 0 auto 30rpx;
  font-size: 25rpx;
}

.info text {
  margin-bottom: 20rpx;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: centerl;
  align-items: center;
  width: 100%;
}

.item {
  width: 100%;
  border-bottom: 20rpx solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.none_bottom {
  border: none;
}

.item_display {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 690rpx;
  margin-bottom: 40rpx;
}

.item_title {
  display: flex;
  flex-direction: row;
  font-size: 29rpx;
  font-weight: bold;
  margin: 40rpx 0 50rpx;
}

.item_very {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 21rpx;
  margin-bottom: 24rpx;
}

.pick_arr {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 auto;
}

.pick_item {
  width: 66rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-size: 25rpx;
  border-radius: 7rpx;
  margin: 0 2rpx;
}

.bottom_display {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.bottom_title {
  font-size: 29rpx;
  width: 690rpx;
  margin: 30rpx auto 46rpx;
}

.input {
  height: 160rpx;
  padding: 20rpx;
  min-width: 650rpx;
  border: 2rpx solid #999;
  font-size: 25rpx;
  margin: 0 auto;
}

.btn {
  width: 620rpx;
  height: 80rpx;
  background-color: black;
  color: white;
  font-size: 31rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 90rpx;
  margin-top: 70rpx;
}
.othertx{
  box-sizing: border-box;
  padding: 20rpx;
  border: 2rpx solid #999;
  font-size: 25rpx;
}
.othertitle{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-bottom: 30rpx;
  display: block;
}
