/* pages/checkOrder/checkOrder.wxss */

page {
  background-color: #f5f5f5;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top {
  width: 100%;
  height: 108rpx;
  border-top: 1px solid #ddd;
  background-color: white;
  margin-bottom: 10rpx;
}

.top_arr {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.top_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

.pick_top {
  font-weight: bold;
  color: #ffd537;
}

.pick_line {
  margin-top: 10rpx;
  width: 40rpx;
  height: 4rpx;
  background-color: #ffd537;
  margin-bottom: 16rpx;
}

.list {
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height:360rpx;
}

.item {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 10rpx 0;
  border-radius: 10rpx;
}

.title {
  margin: 0 auto;
  width: 630rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

.detail {
  width: 630rpx;
  margin: 0 auto 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.line {
  width: 100%;
  background-color: #eee;
  height: 1px;
  margin-bottom: 30rpx;
}

.l_line {
  width: 630rpx;
  background-color: #eee;
  height: 1px;
  margin: 0 auto 30rpx;
}

.bottom {
  width: 630rpx;
  margin: 0 auto 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.btn {
  width: 120rpx;
  height: 46rpx;
  background-color: #ffcd11;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  border-radius: 6rpx;
}

.g_color {
  color: #666;
}
