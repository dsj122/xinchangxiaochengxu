/* pages/speed/speed.wxss */



page {
  background-color: #f5f5f5;
}

.yellow {
  color: #ffcd11 !important;
}

.line {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
}

.width{
  width: 100%;
}

.top {
  margin-top: 2rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  position: relative;
  text-align: center;
}
.top .num{
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  line-height: 38rpx;
  border-radius: 50%;
  background-color: #f11;
  z-index: 99;
  color: white;
  right: -36rpx;
  top: 20rpx;
  font-size: 18rpx;
}
.top_item {
  padding: 40rpx 0;
  font-size: 27rpx;
  position: relative;
}

.top_item_pick {
  padding: 40rpx 0;
  font-size: 29rpx;
  border-bottom: 4rpx solid black;
  position: relative;
}

.number {
  display: flex;
  width: 20rpx;
  height: 20rpx; 
  line-height: 20rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #f11;
}

.number text {
  color: white;
  font-size: 15rpx;
  font-weight: bold;
}

.number_1{
  position: absolute;
  top: 40rpx;
  left: 300rpx;
}

.number_2{
  position: absolute;
  top: 40rpx;
  left: 490rpx;
}

.number_3{
  position: absolute;
  top: 40rpx;
 right: 45rpx;
}

.list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-bottom: 20rpx;
  position: relative;
}

.item_title {
  width: 690rpx;
  margin: 30rpx auto;
  font-size: 27rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  position: relative;
}

.item_title image {
  width: 28rpx;
  height: 28rpx;
  float: left;
  margin-right: 22rpx;
}

.item_arr {
  display: flex;
  justify-content: space-around;
  margin: 42rpx auto;
  width: 100%;
  position: relative;
}

.item_coloum {
  min-width: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 23rpx;
  font-weight: bold;
  color: #999;
}

.item_coloum image {
  width: 90rpx !important;
  height: 90rpx !important;
  margin-bottom: 14rpx;
}

.item_coloum_text {
  margin-bottom: 66rpx;
}

.item_bottom {
  width: 690rpx;
  margin: 30rpx auto;
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  color: #666;
}

.item_positon {
  position: absolute;
  top: 300rpx;
  width: 100%;
}

.item_display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  position: relative;
  width: 510rpx;
}

.item_line{
  margin: 0 auto;
  position: absolute;
  width: 500rpx;
  height: 2rpx;
  background-color: #DDDDDD;
  margin-left: 5rpx;
}

.item_point{
  background-color: white;
  width: 10rpx;
  height: 10rpx;
} 

.item_bigPoint{
  background-color: white;
  width: 18rpx;
  height: 18rpx;
}

.item_oneline{
  margin-left: 5rpx;
  position: absolute;
  width: 150rpx;
  height: 2rpx;
  background-color: #FFCD11;
}

.item_twoline{
  margin-left: 5rpx;
  position: absolute;
  width: 380rpx;
  height: 2rpx;
  background-color: #FFCD11;
}

.item_threeline{
  margin-left: 5rpx;
  position: absolute;
  width: 500rpx;
  height: 2rpx;
  background-color: #FFCD11;
}

.none_dispaly {
  position: absolute;
  top: 400rpx;
}

.none {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 29rpx;
  letter-spacing: 5rpx;
  line-height: 45rpx;
}

.none image {
  width: 277rpx;
  height: 182rpx;
  margin-bottom: 52rpx;
}

.tel_color {
  color: #af0e0e;
  font-weight: bold;
}
