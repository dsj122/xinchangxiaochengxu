/* pages/template/template.wxss */

.nav_rect {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.popupBtn {
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 1;
  position: absolute;
}

.rect {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  z-index: 101;
}

.popup {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 80rpx;
  margin: 0 30rpx;
  z-index: 102;
}

.btn_arr {
  width: 690rpx;
  height: 308rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 0 auto 70rpx;
  border-radius: 10rpx;
}

.t_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.t_item image {
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 26rpx;
}

.t_item text {
  font-size: 29rpx;
  font-weight: bold;
}

.close {
  width: 90rpx;
  height: 90rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.tabBar {
  width: 100%;
  position: fixed;
  bottom: 0;
  padding: 10rpx;
  margin-left: -4rpx;
  background: #f7f7fa;
  font-size: 24rpx;
  color: #8a8a8a;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #aaa;
  z-index: 100;
  display: flex;
  justify-content: space-around;
}

.tabBar-item {
  float: left;
  width: 20%;
  text-align: center;
  overflow: hidden;
  position: relative;
}

/*当前字体颜色*/

.tabBartext {
  color: #ffcd11;
}

.navigator-hover {
  background-color: rgba(0, 0, 0, 0);
}
