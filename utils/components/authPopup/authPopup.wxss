/* utils/components/authPopup/authPopup.wxss */
.popup{
  width: 400rpx;
  height: 250rpx;
  margin: 0 175rpx;
  position: fixed;
  top: 400rpx;
  background-color: white;
  border: 2rpx solid gainsboro;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.popup_tilte{
  font-size: 29rpx;
  margin: 60rpx 0;
  font-weight: bold;
}

.popup_btnArr{
  font-size: 25rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.popup_btn{
  border-radius: 10rpx;
  width: 30%;
  position: relative;
  border: 2rpx solid gainsboro;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup_btn button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}




